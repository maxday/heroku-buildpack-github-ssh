echo "---"
echo "ENV DIR"
ENV_DIR=${3:-}
echo $ENV_DIR
echo "---"
echo "GITHUB_DEPLOY_PRIVATE_KEY"
echo $GITHUB_DEPLOY_PRIVATE_KEY
echo "---"
echo "GITHUB_HOST"
echo $GITHUB_HOST
echo "---"
echo "GITHUB_USER_EMAIL"
echo $GITHUB_USER_EMAIL
echo "---"
echo "GITHUB_USER_NAME"
echo $GITHUB_USER_NAME
echo "---"

mkdir -p /app/.ssh
echo $GITHUB_DEPLOY_PRIVATE_KEY | base64 --decode > "/app/.ssh/id_rsa" 
ssh -o StrictHostKeyChecking=no $GITHUB_HOST
git config --global user.email $GITHUB_USER_EMAIL
git config --global user.name $GITHUB_USER_NAME